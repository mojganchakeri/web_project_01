<%- include ../master/header %>
    <div class="container direction_rtl">
        <div class="row" style="margin-top:20px;">
            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                <div class="panel panel-danger samim">
                   <div class="panel-heading">ثبت نام</div>
                   <div class="panel-body">
                      <% if (typeof errors != 'undefined') {%>
                        <div class="alert alert-danger direction_rtl text-right samim">
                          <strong>اووپس...!!! لطفا موارد زیر را برطرف کنید</strong>
                          <ul>
                            <% for (i=0;i<errors.length;i++) { %>
                              <li><%= errors[i].msg %></li>
                            <% } %>
                          </ul>
                        </div>
                        <% } %>
                       <form action="/register" method="post">
                           <div class="form-group">
                               <label for="email">ایمیل*</label>
                               <input type="email" name="email" id="email" class="form-control" required>
                           </div>
                           <div class="form-group">
                               <label for="password">پسورد*</label>
                               <input type="password" name="password" id="password" class="form-control" required>
                           </div>
                           <div class="form-group">
                               <label for="confirm_password">تکرار رمز عبور*</label>
                               <input type="password" name="confirm_password" id="confirm_password" class="form-control" required>
                           </div>
                           <div class="form-group">
                               <label for="fullname">نام کامل*</label>
                               <input type="text" name="fullname" id="fullname" class="form-control" required>
                           </div>
                           <div class="form-group">
                               <button type="submit" class="btn btn-block btn-danger" >تکمیل ثبت نام</button>
                           </div>
                       </form>
                   </div> 
                </div>
            </div>
        </div>
    </div>
<%- include ../master/footer %>